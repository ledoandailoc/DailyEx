<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:paddingLeft="@dimen/chat_fragment_padding_size">

    <com.example.ledoa.dailyexsuper.customview.CircleImageView
        android:id="@+id/iv_avatar_other"
        android:layout_width="@dimen/chat_fragment_avatar_size"
        android:layout_height="@dimen/chat_fragment_avatar_size"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:src="@drawable/personal_chat_icon_128x128"
        app:border_color="@color/isOffline"
        app:border_width="@dimen/chat_fragment_border_avatar_size" />

    <ImageView
        android:id="@+id/iv_picture_other"
        android:layout_width="@dimen/chat_fragment_width_image_size"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-15dp"
        android:layout_marginRight="45dp"
        android:layout_toEndOf="@id/iv_avatar_other"
        android:layout_toRightOf="@id/iv_avatar_other"
        android:adjustViewBounds="true"
        android:background="@drawable/bg_arrow_left_bottom"
        android:gravity="left"
        android:minHeight="@dimen/chat_fragment_min_hight_image" />

</RelativeLayout>