<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.example.ledoa.dailyexsuper.activity.BaiTapDiBoActivity"
    >

    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar_top_activity" />


    <RelativeLayout
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/actionbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout6">


            <TextView
                android:layout_margin="3dp"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#ee5900"
                android:text="BMI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_ngay" />

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_chamhoi"
                android:id="@+id/btn_bmi" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout4"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toLeftOf="@+id/tv_hoanthanh"
            android:layout_toRightOf="@+id/linearLayout6"
            android:layout_toEndOf="@+id/linearLayout6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:id="@+id/tv_tenchuongtrinh"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái: bình thường"
                android:id="@+id/tv_noidungchuongtrinh"
                android:textColor="#3c3c3c"
                />
        </LinearLayout>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Tính BMI"
            android:id="@+id/btn_tinh_bmi"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9e9e9e"
        android:id="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout3"
        android:orientation="vertical" />

    <RelativeLayout
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/relativeLayout5"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout7" >

            <TextView
                android:layout_margin="3dp"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#ee5900"
                android:text="TDEE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView24" />

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_chamhoi"
                android:id="@+id/btn_tdee" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout8"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/linearLayout7"
            android:layout_toEndOf="@+id/linearLayout7" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2500 calo"
                android:id="@+id/textView25"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mỗi ngày bạn cần nạp vào 2500 calo để duy trì cân nặng"
                android:id="@+id/textView26"
                android:textColor="#3c3c3c" />
        </LinearLayout>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Tính TDEE"
            android:id="@+id/btn_tinh_tdee"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9e9e9e"
        android:id="@+id/linearLayout9"
        android:orientation="vertical"
        android:layout_below="@+id/relativeLayout5"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/relativeLayout6"
        android:layout_below="@+id/linearLayout9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_gravity="top"
            android:orientation="vertical"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout10" >

            <TextView
                android:gravity="center"
                android:layout_margin="3dp"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#ee5900"
                android:layout_gravity="center_horizontal"
                android:text="Calo nạp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView27" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:orientation="vertical"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout11"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/linearLayout10"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2600 calo"
                android:id="@+id/textView28"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trạng thái: khuẩu phần ăn của bạn dư theemcalo so với lượng cần thiết"
                android:id="@+id/textView29"
                android:textColor="#3c3c3c" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9e9e9e"
            android:id="@+id/linearLayout13"
            android:orientation="vertical"
            android:layout_below="@+id/linearLayout11"
            android:layout_alignLeft="@+id/linearLayout11"
            android:layout_alignStart="@+id/linearLayout11" />

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:orientation="vertical"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/linear_buoisang"
            android:layout_below="@+id/linearLayout11"
            android:layout_toRightOf="@+id/linearLayout10"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buổi sáng"
                    android:id="@+id/textView40"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:id="@+id/btn_buasang" />
            </LinearLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv_buoisang">

            </ListView>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9e9e9e"
            android:id="@+id/linearLayout16"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/linear_buoisang"
            android:layout_alignLeft="@+id/linearLayout13"
            android:layout_alignStart="@+id/linearLayout13" />

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:orientation="vertical"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout18"
            android:layout_below="@+id/linearLayout16"
            android:layout_toRightOf="@+id/linearLayout10"
            android:layout_alignRight="@+id/linearLayout16"
            android:layout_alignEnd="@+id/linearLayout16">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buổi trưa"
                    android:id="@+id/textView31"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:id="@+id/btn_buatrua" />
            </LinearLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv_buoitrua">

            </ListView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9e9e9e"
            android:id="@+id/linearLayout19"
            android:orientation="vertical"
            android:layout_below="@+id/linearLayout18"
            android:layout_alignLeft="@+id/linearLayout16"
            android:layout_alignStart="@+id/linearLayout16" />

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:orientation="vertical"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout21"
            android:layout_below="@+id/linearLayout19"
            android:layout_alignRight="@+id/linearLayout19"
            android:layout_alignEnd="@+id/linearLayout19"
            android:layout_toRightOf="@+id/linearLayout10"
            android:layout_toEndOf="@+id/linearLayout10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buổi tối"
                    android:id="@+id/textView32"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:id="@+id/btn_buatoi" />
            </LinearLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv_buoitoi">

            </ListView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9e9e9e"
            android:id="@+id/linearLayout22"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/linearLayout21"
            android:layout_toRightOf="@+id/linearLayout10"
            android:layout_toEndOf="@+id/linearLayout10" />

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:orientation="vertical"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout24"
            android:layout_alignTop="@+id/linearLayout22"
            android:layout_toRightOf="@+id/linearLayout10"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Các món ăn thêm"
                    android:id="@+id/textView33"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:id="@+id/btn_cacmonthem" />
            </LinearLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv_cacmonanthem">

            </ListView>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/relativeLayout7"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

    </RelativeLayout>


</RelativeLayout>
