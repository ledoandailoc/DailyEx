<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ledoa.dailyexsuper.activity.TaoChuongTrinhGiamCanActivity"
    android:background="#ee5900">

    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar_top_step" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:id="@+id/relativeLayout2"
        android:layout_below="@+id/tv_trangthaicothe"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chiều cao (cm)"
            android:id="@+id/textView12"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:backgroundTint="#fff"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_chieucao"
            android:layout_below="@+id/textView12"
            android:layout_centerHorizontal="true" />

        <TextView
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cân nặng (kg)"
            android:id="@+id/textView13"
            android:layout_below="@+id/txt_chieucao"
            android:layout_centerHorizontal="true" />

        <EditText
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:backgroundTint="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_cannang"
            android:layout_below="@+id/textView13"
            android:layout_alignLeft="@+id/txt_chieucao"
            android:layout_alignStart="@+id/txt_chieucao"
            android:layout_alignRight="@+id/txt_chieucao"
            android:layout_alignEnd="@+id/txt_chieucao" />

        <TextView
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuổi "
            android:id="@+id/textView38"
            android:layout_below="@+id/txt_cannang"
            android:layout_centerHorizontal="true" />

        <EditText
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:backgroundTint="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_tuoi"
            android:layout_below="@+id/textView38"
            android:layout_alignLeft="@+id/textView38"
            android:layout_alignStart="@+id/textView38"
            android:layout_alignRight="@+id/textView38"
            android:layout_alignEnd="@+id/textView38" />


        <TextView
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới tính"
            android:id="@+id/textView17"
            android:layout_below="@+id/txt_tuoi"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:id="@+id/ln1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView17">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="15dp"
                android:text="Nam"/>
            <CheckBox
                android:checked="true"
                android:buttonTint="#fff"
                android:id="@+id/cb_nam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="15dp"
                android:text="Nữ"/>
            <CheckBox
                android:buttonTint="#fff"
                android:id="@+id/cb_nu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại vận động"
            android:id="@+id/textView14"
            android:layout_below="@+id/ln1"
            android:layout_centerHorizontal="true" />

        <Spinner
            android:paddingLeft="10dp"
            android:dropDownSelector="@drawable/icon_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:spinnerMode="dropdown"
            android:layout_below="@+id/textView14"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <TextView
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lượng calo cần thiết để duy trì cân nặng của bạn (bao gồm cả calo vận độn)"
        android:id="@+id/tv_trangthaicothe"
        android:layout_below="@+id/tv_tdee"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tính chỉ số TDEE"
        android:id="@+id/tv_tdee"
        android:layout_below="@+id/actionbar"
        android:layout_centerHorizontal="true" />

    <Button
        android:background="@drawable/button_border_normal"
        android:textAllCaps="false"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Tiếp Tục"
        android:textSize="20dp"
        android:textColor="#fff"
        android:id="@+id/btn_tieptuc"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
