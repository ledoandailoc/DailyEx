<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ledoa.dailyexsuper.activity.TaoChuongTrinhGiamCanActivity"
    android:background="#000"
    >

    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar_top_step" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:id="@+id/relativeLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_trangthaicothe">

        <TextView
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chiều cao (cm)"
            android:id="@+id/textView12"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:singleLine="true"
            android:nextFocusUp="@id/txt_cannang"
            android:textColor="#fff"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_chieucao"
            android:layout_below="@+id/textView12"
            android:layout_centerHorizontal="true" />

        <TextView
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cân nặng (kg)"
            android:id="@+id/textView13"
            android:layout_below="@+id/txt_chieucao"
            android:layout_centerHorizontal="true" />

        <EditText
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_cannang"
            android:layout_below="@+id/textView13"
            android:layout_alignLeft="@+id/txt_chieucao"
            android:layout_alignStart="@+id/txt_chieucao"
            android:layout_alignRight="@+id/txt_chieucao"
            android:layout_alignEnd="@+id/txt_chieucao" />

    </RelativeLayout>

    <Button
        android:layout_marginTop="10dp"
        android:background="@drawable/button_border_normal"
        android:textAllCaps="false"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Tiếp Tục"
        android:textSize="20dp"
        android:textColor="#fff"
        android:id="@+id/btn_tieptuc"
        android:layout_alignRight="@+id/tv_tdee"
        android:layout_alignEnd="@+id/tv_tdee"
        android:layout_below="@+id/relativeLayout2" />

    <TextView
        android:textColor="#fff"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Là chỉ số đánh giá mức độ gầy hay béo của 1 người "
        android:id="@+id/tv_trangthaicothe"
        android:layout_below="@+id/tv_tdee"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tính chỉ số BMI"
        android:id="@+id/tv_tdee"
        android:layout_below="@+id/actionbar"
        android:layout_centerHorizontal="true" />

</RelativeLayout>