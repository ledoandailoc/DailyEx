<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ledoa.dailyexsuper.activity.TaoChuongTrinhGiamCanActivity"
    android:background="#ee5900">

    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar_top_step" />

    <Button
        android:background="@drawable/button_border_normal"
        android:textAllCaps="false"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Hoàn thành"
        android:textSize="20dp"
        android:textColor="#fff"
        android:id="@+id/btn_hoanthanh"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp" />

    <TextView
        android:padding="10dp"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bạn cần nạp vào cơ thể 2576 calo 1 ngày từ thức ăn, nước uống để có thể duy trì cân nặng hiện tại là 67.6 kg với cường độ luyện tập và lối sống không đổi."
        android:id="@+id/tv_ket_qua"
        android:layout_below="@+id/tv_tdee"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textColor="#fff"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TDEE = 2576"
        android:id="@+id/tv_tdee"
        android:layout_marginTop="106dp"
        android:layout_below="@+id/actionbar"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
